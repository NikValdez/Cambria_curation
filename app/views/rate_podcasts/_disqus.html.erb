<div id="disqus_thread"></div>

<script>

(function (document, window, undefined) {

  'use strict';

  // Create button
  var commentsButton = document.createElement('button');

  // Button attrs
  commentsButton.setAttribute('class', 'comments-button');  
  commentsButton.innerHTML = 'Show Comments';

  // Append button to body
  document.body.appendChild(commentsButton);

  // Click event handler
  commentsButton.addEventListener('click', function () {   

    // Create comments container
    var disqusContainer = document.createElement('div'),
      disqus_shortname = 'cambriacuration',
      dsq = document.createElement('script');

    disqusContainer.setAttribute('id', 'disqus_thread');

    // Disqus
    dsq.type = 'text/javascript';
    dsq.async = true;
    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';

    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    
    // Append container to body
    document.body.appendChild(disqusContainer);

    // Remove button
    this.parentNode.removeChild(this);

  }, false);

})(document, window);


</script>

